#!/bin/bash
clear
read -p "Enter text to display: " user_text

echo "Choose a shade of pink:"
echo "1. Light Pink"
echo "2. Pink"
echo "3. Dark Pink"
echo "4. Darker Pink"
echo "5. Custom color"
read -p "Enter your choice (1-5): " shade_choice

case $shade_choice in
    1)
        color="\e[38;5;213m"  
        ;;
    2)
        color="\e[38;5;206m"  
        ;;
    3)
        color="\e[38;5;198m"  
        ;;
    4)
        color="\e[38;5;197m"  
        ;;
    5)
        read -p "Enter custom color (e.g., 31 for red): " custom_color
        color="\e[38;5;${custom_color}m"
        ;;
    *)
        echo "Invalid choice. Exiting."
        exit 1
        ;;
esac

reset="\e[0m"

clear

echo -e "${color}
               *                 [${user_text}]        *
██╗   ██╗          ██╗   ██╗ ----┘          *
██║   ██║██║    ██║██║   ██║            *
██║   ██║██║ █╗ ██║██║   ██║   *
██║   ██║██║███╗██║██║   ██║        *
╚██████╔╝╚███╔███╔╝╚██████╔╝   *
 ╚═════╝  ╚══╝╚══╝  ╚═════╝               *
${reset}"
sleep 999
